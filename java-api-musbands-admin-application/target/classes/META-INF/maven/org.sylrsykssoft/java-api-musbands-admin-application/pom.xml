<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.sylrsykssoft</groupId>
    <artifactId>java-api-musbands-admin</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <artifactId>java-api-musbands-admin-application</artifactId>
  <name>java-api-musbands-admin-application</name>
  <url>https://github.com/sylarsykes/java-api-musbands-admin/tree/master/java-api-musbands-admin.application</url>
  
  <developers>
	<developer>
		<id>${developer.id}</id>
		<name>Juan Gonzalez Fernandez</name>
		<email>${developer.email}</email>
		<url>https://github.com/sylarsykes</url>
	</developer>
  </developers>
  <licenses>
    <license>
	  <name>Apache License, Version 2.0</name>
	  <url>https://www.apache.org/licenses/LICENSE-2.0</url>
	</license>
  </licenses>
  <scm>
	<url>https://github.com/sylarsykes/coreapi-framework</url>
	<connection>https://github.com/sylarsykes/coreapi-framework.git</connection>
	<developerConnection>ps://github.com/sylarsykes</developerConnection>
  </scm>
  
  <properties>
		<!-- Common -->
		<developer.id>juan.gonzalez.fernandez.jgf</developer.id>
		<developer.email>juan.gonzalez.fernandez.jgf@outlook.com</developer.email>
		<main.basedir>${basedir}</main.basedir>
		<java.version>11</java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    	<maven.compiler.source>${java.version}</maven.compiler.source>
    	<maven.compiler.target>${java.version}</maven.compiler.target>
    	<maven.compiler.release>${java.version}</maven.compiler.release>
		
		<start-class>org.java.api.musbands.admin.application.MusbandsAdminApiApplication</start-class>
  </properties>
  
  <dependencies>
    <dependency>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-configuration-processor</artifactId>
		<optional>true</optional>
	</dependency>
	
	<dependency>
	    <groupId>org.springframework.boot</groupId>
	    <artifactId>spring-boot-starter-data-rest</artifactId>
	</dependency>
	
  	<dependency>
   		<groupId>org.mariadb.jdbc</groupId>
   		<artifactId>mariadb-java-client</artifactId>
	</dependency>
	
	<dependency>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-cache</artifactId>
	</dependency>
	
	<!-- Musbands Admin Dependencies -->
	<dependency>
		<groupId>org.sylrsykssoft</groupId>
		<artifactId>java-api-musbands-admin-function-member</artifactId>
		<version>${java-api-musbands.admin.function-member.version}</version>
	</dependency>
	
  </dependencies>
  
  <build>
    	<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-maven-plugin</artifactId>
				</plugin>
				
			    <plugin>
			        <groupId>org.apache.maven.plugins</groupId>
			        <artifactId>maven-compiler-plugin</artifactId>
			        <version>${maven-compiler-plugin.version}</version>
			        <configuration>
			        	<source>${maven.compiler.source}</source>
			        	<target>${maven.compiler.target}</target>
			        	<release>${maven.compiler.release}</release>
			        	<!-- Unable to use Lombok with Java 11 -->
			        	<annotationProcessorPaths>
			        		<annotationProcessorPath>
                                <groupId>org.projectlombok</groupId>
                                <artifactId>lombok</artifactId>
								<version>${lombok.version}</version>
			        		</annotationProcessorPath>
			        	</annotationProcessorPaths>
			        </configuration>
				</plugin> 
			</plugins>
		</pluginManagement>
    </build>
</project>
